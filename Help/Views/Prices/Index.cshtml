@{
  Layout = "_Layout";
}

@using Help.Models; 

<h1>Price Points</h1>

@if (@Model.Count == 0)
{
  <h3>No price points have been added yet!</h3>
} 

<ul>
  @foreach(Price price in Model)
  {
    <li>@Html.ActionLink($"{price.DollarSigns}", "Details", new { id = price.PriceId })</li>
  }
</ul>

<p>@Html.ActionLink("Add New Price Point", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>